<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <template id="r_template">
         <t t-call="web.html_container">
             <t t-foreach="docs" t-as="doc">
                 <t t-call="web.external_layout">
                     <h>Realestate details</h>
                     <tr>
                         <td>
                             <p>
                                 <strong>Project name</strong>
                             </p>
                             <p>
                                 <strong>Project number</strong>
                             </p>
                             <p>
                                 <strong>Company name</strong>
                             </p>
                         </td>
                         <td>
                             <p>
                             <t t-esc="doc.project_name"/>
                             </p>
                             <p>
                             <t t-esc="doc.project_number"/>
                             </p>
                             <p>
                             <t t-esc="doc.company_name"/>
                             </p>
                         </td>
                     </tr>
                     <tr>
                         <table class="table table-bordered mb-0" style="border: 2px solid lack;">
                             <div class="mr-auto">
                                 <img alt="Barcode"
                                      t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(doc.barcode), 600, 150)"
                                      style="width:300px;height:50px"/>
                                  <span t-field="doc.barcode"/>
                             </div>
                         </table>
                     </tr>
                 </t>
             </t>
         </t>
     </template>
</odoo>