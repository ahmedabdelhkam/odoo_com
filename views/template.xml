       <template id="w_template" name="My Projects">
                    <t t-call="website.layout">
            <div class="container">
                This homepage makes you familiar with the projects executed by our company
                <table>
                    <thead>
                        <tr>
                            <td>
                                projects
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="projects" t-as="o">
                            <tr>
                                <td>
                                    <p>
                                        <t t-esc="o.project_name"/>

                                        <t t-esc="o.company_name"/>
                                    </p>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
                    </t>
